<!--components/Tabs/tabs.wxml-->
<view class="tabs">
  <view class="tabs-title">
    <view wx:for="{{tabs}}" wx:key="id" class="tabs-item {{item.isActive?'active':''}}" bindtap="handleTab" data-index="{{index}}">
      {{item.name}}
    </view>
  </view>
  <view class="tabs-content">
    <slot></slot>
  </view>
</view>