/* pages/pay/index.wxss */
page{
  padding-bottom: 100rpx;
}
.revice_address{
  padding: 15rpx 15rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
  font-size: 30rpx;
}
.address_top{
  display: flex;
  width: 100%;
}
.address_top .address_name{
  flex: 3;
}
.address_top .address_phone{
  flex: 2;
  text-align: right;
}
.cart_content{

}
.cart_content .cart_title{
  font-size: 40rpx;
  padding: 15rpx 15rpx;
  border-top: 5rpx solid #eb4450;
  border-bottom: 5rpx solid #eb4450;
  display: flex;
    /* justify-content: center; */
  align-items: center;
}
.cart_content .cart_main{
  
}
.cart_content .cart_main .cart_item{
  display: flex;
  width: 100%;
  border-bottom: 2rpx solid rgb(207, 204, 204);
  padding: 15rpx 0rpx 15rpx 0rpx;
}
.cart_content .cart_main .cart_item navigator{
  flex: 2;
  padding-left: 15rpx;
}
image{
  height: 225rpx;
  width: 225rpx;
}
.cart_content .cart_main .cart_item .cart_info{
  display: flex;
  flex-direction: column;
  padding-left: 10rpx;
}
.cart_info .cart_name{
  font-size: 32rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart_info .price_num_wrap{
  display: flex;
  width: 100%;
  margin-top: 92rpx;
}
.cart_info .price_num_wrap .cart_price{
  font-size: 34rpx;
  color: var(--themeColor);
  flex: 4;
}
.cart_info .price_num_wrap .num{
  flex: 1;
  padding-right: 15rpx;
  text-align: right;
  font-size: 30rpx;
}
.bottom_tool{
  border-top: 2rpx solid rgb(207, 204, 204);
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  background-color: white;
  height: 100rpx;
  width: 100%;
  padding-left:10rpx;
}
.bottom_tool .total_price_wrap{
  flex: 2.5;
  text-align: right;
    padding: 10rpx 10rpx;
}
.bottom_tool .total_price_wrap .total_price{
  font-size: 34rpx;
}
.bottom_tool .total_price_wrap .total_price text{
  color: var(--themeColor);
}
.bottom_tool .total_price_wrap .total_price_word{

}
.order_pay_wrap{
  flex: 1.5;
  background-color: var(--themeColor);
    color: white;
    font-size: 38rpx;
    /* text-align: center; */
    display: flex;
    justify-content: center;
    align-items: center;
}