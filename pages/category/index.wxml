<!--pages/category/index.wxml-->
<view class="page_category">
<searchInput></searchInput>
<view class="category_container">
<scroll-view class="leftMenu" scroll-y="true">
  <view class="leftMenu_item {{index===currentIndex?'active':''}}" wx:for="{{leftMenuList}}" wx:key="*this" bindtap="handleItemTap" data-index="{{index}}">{{item}}</view>
</scroll-view>
<scroll-view class="rightContent" scroll-y="true" scroll-top="{{scrollTop}}">
  <view wx:for="{{rightContent}}" class="rightContent_group" wx:for-item="item1" wx:for-index="index1">
    <view class="rightContent_title">{{item1.cat_name}}</view>
    <view class="rightContent_content">
      <navigator wx:for="{{item1.children}}" wx:for-index="index2" wx:for-item="item2" wx:key="cat_id" url="/pages/goods_list/index?cid={{item2.cat_id}}">
        <image src="{{item2.cat_icon}}" mode="widthFix"></image>
        <view class="goods_name">{{item2.cat_name}}</view>
      </navigator>
    </view>

    
  </view>
</scroll-view>
</view>
</view>
