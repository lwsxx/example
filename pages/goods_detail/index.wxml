<!--pages/goods_detail/index.wxml-->
<view class="goodsDetail">
  <!-- 轮播图 -->
  <view class="detail_swiper">
    <swiper autoplay="true" circular="true" indicator-color="rgba(0,0,0,.3)" indicator-active-color="#000000" indicator-dots="true">
      <swiper-item
      wx:for="{{goodsDetail.pics}}"
      wx:key="pics_id"
      bindtap="handlePrevewImage"
      data-url="{{item.pics_mid}}">
      <image src="{{item.pics_mid}}" mode="widthFix"></image>
      </swiper-item>
    </swiper>
  </view>
  <!-- 轮播图结束 -->
  <view class="info">
    <view class="price">
      ￥{{goodsDetail.goods_price}}
    </view>
    <view class="information">
      <view class="title">
        {{goodsDetail.goods_name}}
      </view>
      <view class="shoucang" bindtap="handleCollect">
        <!-- 使用收藏图标 -->
          <text class="iconfont {{isCollect?'icon-shoucang1':'icon-shoucang'}}"></text>
          <view class="shoucang_text">收藏</view>
      </view>
    </view>
  </view>
  <view class="tuwenDetail">
  <view class="title">
  图文详情
  </view>
  <rich-text nodes="{{goodsDetail.goods_introduce}}"></rich-text>
  </view>
  <!-- 底部工具栏 -->
  <view class="bottom_tool">
    <view class="tool_item">
      <view class="iconfont icon-lianxi">
      </view>
      <view>客服</view>
      <button open-type="contact"></button>
    </view>
    <view class="tool_item">
      <view class="iconfont icon-fenxiang">
      </view>
      <view>分享</view>
      <button open-type="share"></button>
    </view>
    <navigator class="tool_item" url="/pages/cart/index" open-type="switchTab">
      <view class="iconfont icon-gouwuche">
      </view>
      <view>购物车</view>
    </navigator>
    <view class="cart" bindtap="addCart">
      加入购物车
    </view>
    <view class="buy">
      立即购买
    </view>
  </view>
</view>
