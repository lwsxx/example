/* pages/cart/index.wxss */
page{
  padding-bottom: 100rpx;
}
.address_add{
  padding: 20rpx 0;
}
.address_add button{
  width: 60%;
}
.adress{
  padding: 15rpx;
  font-size: 30rpx;
  border-bottom: 5rpx solid #eb4450;
}
.address_top{
  display: flex;
  width: 100%;
}
.address_top .address_name{
  flex: 2;
}
.address_top .address_phone{
  flex: 1;
}
.cart_title{
  font-size: 40rpx;
  padding: 15rpx;
  border-bottom: 5rpx solid #eb4450;
}
.content_item{
  display: flex;
  width: 100%;
  padding: 0rpx 10rpx;
  justify-content: center;
  align-items: center;
  border-bottom: 2rpx solid rgb(207, 204, 204);
}
.content_item .check_group{
  flex: 0.5;
}
.content_item .cart_img{
  flex:2;
}
image{
  height: 225rpx;
  width: 225rpx;
}
.content_item .cart_info{
  flex: 3;
}
.content_item .price_num_wrap{
  display: flex;
  margin-top: 15rpx;
  width: 100%;
  font-size: 35rpx;
}
.content_item .price_num_wrap .cart_price{
  color: var(--themeColor);
  flex: 1;
}
.content_item .price_num_wrap .num_edit{
  border: 1rpx solid #bbb7b7;
  background-color: aliceblue;
  flex: 0.15;
  text-align: center;
}
.content_item .cart_info .cart_name{
  font-size: 30rpx;
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
.content_item .price_num_wrap .num{
  margin: 0 18rpx;
}
.bottom_tool{
  border-top: 2rpx solid rgb(207, 204, 204);
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  background-color: white;
  height: 100rpx;
  width: 100%;
  padding-left:10rpx;
}
.all_check_wrap{
  flex: 2;
  display: flex;
  align-items: center;
}
.bottom_tool .total_price_wrap{
  flex: 2.5;
  text-align: right;
    padding: 10rpx 10rpx;
}
.bottom_tool .total_price_wrap .total_price{
  font-size: 34rpx;
}
.bottom_tool .total_price_wrap .total_price text{
  color: var(--themeColor);
}
.bottom_tool .total_price_wrap .total_price_word{

}
.order_pay_wrap{
  flex: 1.5;
  background-color: var(--themeColor);
    color: white;
    font-size: 38rpx;
    /* text-align: center; */
    display: flex;
    justify-content: center;
    align-items: center;
}
