.index_cate{
  display: flex;
 
}
.index_cate navigator{
  flex: 1;
  padding: 30rpx;
}
.index_cate navigator image{
  width: 100%;
}
.index_floor .floor_title{
  padding: 10rpx 0;
}
.index_floor .floor_title image{
  width: 100%;
}
.index_floor .floor_group .floor_content{
  overflow: hidden;
}
.index_floor .floor_group .floor_content navigator{
  float: left;
  width: 33.33%;
  padding: 5rpx;
}
/* 后四个超链接 */
.index_floor .floor_group .floor_content navigator:nth-last-child(-n+4){
  /* 原图的宽高：232*386 
     第一张图片的高度：33.33vw*386/232
     后四张图片的高度等于第一张图片的高度的一半
     height：33.33vw*386/232/2
  */
  height: calc(33.33vw*386/234/2);
}
.index_floor .floor_group .floor_content navigator image{
  width: 100%;
  height: 100%;
}