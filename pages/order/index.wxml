<!--pages/order/index.wxml-->
<Tabs tabs="{{tab}}" binditemChange="handleChange">
  <view class="order_content">
    <view class="order_item" wx:for="{{ordersList}}" wx:key="order_id">
      <view class="order_nu_wrap">
        <view class="number_title">订单编号</view>
        <view class="number">{{item.order_number}}</view>
      </view>
      <view class="order_price_wrap">
        <view class="price_title">订单价格</view>
        <view class="price">￥{{item.order_price}}</view>
      </view>
      <view class="order_date_wrap">
        <view class="date_title">订单日期</view>
        <view class="date">{{item.create_time_cn}}</view>
      </view>
    </view>
  </view>
</Tabs>
